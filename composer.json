{
  "name": "fnbr/webtool",
  "version": "3.8",
  "description": "FrameNet Brasil Web Annotation Tool",
  "license": "GPLv3",
  "keywords": [
    "framenet",
    "annotation",
    "frames",
    "constructions"
  ],
  "authors": [
    {
      "name": "Tiago Torrent",
      "email": "tiago.torrent@gmail.com"
    },
    {
      "name": "Ely Matos",
      "email": "admin@ematos.net"
    },
    {
      "name": "fnzr",
      "email": "admin@fmatos.net"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/FrameNetBrasil/orkester.git"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "auth0/auth0-php": "^8.0",
    "cboden/ratchet": "^0.4",
    "elymatos/orkester": "dev-main",
    "guzzlehttp/guzzle": "^7.2",
    "laravel/framework": "^10.10",
    "laravel/octane": "^2.2",
    "laravel/sanctum": "^3.2",
    "laravel/tinker": "^2.8",
    "mauricius/laravel-htmx": "*",
    "rdx/laravelcollective-annotations": "^8.2",
    "spatie/laravel-data": "*",
    "textalk/websocket": "^1.5",
    "vlucas/phpdotenv": "^5.4"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9.1",
    "laravel/pint": "^1.0",
    "laravel/sail": "^1.18",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^7.0",
    "phpunit/phpunit": "^10.1",
    "spatie/laravel-ignition": "^2.0"
  },
  "autoload": {
    "files": [
      "bootstrap/helpers.php"
    ],
    "psr-4": {
      "App\\": "app/",
      "Maestro\\": "maestro/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "prefer-stable": true,
  "minimum-stability": "dev"
}
